<h1>商品新規登録</h1>

<% if @item.errors.any? %>
 <%= @item.errors.count %> errors prohibited this book from being saved:
 <ul>
   <% @item.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
 </ul>
<% end %>

<%= form_with model: @item,url: '/items', method: :post do |f| %>

  <h4>商品名</h4>
  <%= f.text_field :name %>

  <h4>商品説明</h4>
  <%= f.text_area :introduction %>
  
  <h4>税抜価格</h4>
  <%= f.text_field :price %>

  </br>
  <%= f.submit'新規登録', class: "btn btn-success" %>

<% end %>