<h1>商品一覧</h1>

  
<%= link_to new_admin_item_path, class: "nav-link text-white", style: "color: blue; text-decoration: underline;" do %>
  <i class="fas fa-plus"></i>
<% end %>


<table class = "table table-striped">

  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item) %></td>
        <td><%= number_with_delimiter(item.price) %></td>
      </tr>
    <% end %>
  </tbody>

</table>
