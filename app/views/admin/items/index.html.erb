<!-- 1ユーザーの本の投稿一覧 -->
<h1>Items</h1>

<table class = "table table-striped">

  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
    </tr>
  </thead>

  <tbody>
    <% @item.each do |item| %>
      <tr>
        <td><%= link_to item.name, item_path(item) %></td>
        <td><%= item.price %></td>
      </tr>
    <% end %>
  </tbody>

</table>
