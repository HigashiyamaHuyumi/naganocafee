<div class="container">
  <h5><span style="background-color: #dcdcdc;">注文履歴一覧</span></h5>
  <div class="row text-center">
    <div class="col-md-12">

    <table class = "table">

      <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>注文詳細</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at %></td>
            <td>
              <%= order.shipping_postal_code %><br>
              <%= order.shipping_address %><br>
              <%= order.shipping_name %>
            </td>
            <td>
              <% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %><br>
              <% end %>
            </td>
            <td><%= number_with_delimiter(order.total_payment) %>円</td>
            <td>
              <%= link_to order_path(order), class: "btn btn-primary" do %>
                表示する
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>

    </table>

    </div>
  </div>
  
</div>
