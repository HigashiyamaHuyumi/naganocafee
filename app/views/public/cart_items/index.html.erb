<h5><span style="background-color: #dcdcdc;">ショッピングカート</span></h5>

<%= link_to cart_items_path, class: "btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？"  do %>
  カートを空にする
<% end %>

<table class="table table-striped" border="1">

  <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th>　</th>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <% if cart_item.item.image.attached? %>
            <%= image_tag cart_item.item.image, width: 100, height: 100 %>
          <% else %>
            <%= image_tag "no_image.jpg", width: 100, height: 100 %>
          <% end %>
          <%= cart_item.item.name %>
        </td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.subtotal %></td>
          <% @合計金額 += cart_item.subtotal %>
        <td>
          <%= link_to cart_item_path(cart_item), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？"  do %>
            削除
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>



