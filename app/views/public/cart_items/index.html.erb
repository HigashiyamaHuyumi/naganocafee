<h5><span style="background-color: #dcdcdc;">ショッピングカート</span></h5>

<table class = "table table-striped">

  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>　</th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <% if cart_item.item.image.attached? %>
            <%= image_tag cart_item.item.image, width: 100, height: 100 %>
          <% else %>
            <%= image_tag "no_image.jpg", width: 100, height: 100 %>
          <% end %>
          <%= cart_item.item.name %>
        </td>
        <td><%= cart_item.amount %></td>
        <td><%= number_with_delimiter((cart_item.item.price * 1.1).to_i) %></td>
        <td>
          <!-- %= link_to "削除", cart_item_path(cart_item), method: :delete, data: { confirm: "本当に削除しますか?" % -->
        </td>
      </tr>
    <% end %>
  </tbody>

</table>



