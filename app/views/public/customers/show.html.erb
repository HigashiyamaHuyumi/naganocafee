<h5><span style="background-color: #dcdcdc;">マイページ</span></h5>

<h5>登録情報</h5>

<%= link_to "編集する", edit_customer_path(@customer), class: "btn btn-success" %>

<table class = "table table-striped">
  <tbody>
    <% if @customer.present? %>
      <tr>
        <th>氏名</th>
        <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
      </tr>
   　  <tr>
        <th>カナ</th>
        <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
      </tr>
       <tr>
        <th>郵便番号</th>
        <td><%= @customer.postal_code %>
      </tr>
       <tr>
        <th>住所</th>
        <td><%= @customer.address %>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.telephone_number %>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.last_name %>
      </tr>

    <% end %>
  </tbody>
</table>