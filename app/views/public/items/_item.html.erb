<div class="card-list-container py-5">
  <div class="row">
    <% items.each do |item| %>
      <div class="col-md-3 mt-4">
        <div class="card shadow-lg">
          <div class="card-body">
            <div class="row">
              <div class="col-md-8">
                <% if item.image.attached? %>
                  <%= image_tag item.image, width: 100, height: 100 %>
                <% else %>
                  <%= image_tag "no_image.jpg", width: 100, height: 100 %>
                <% end %>
              </div>
              <div class="col-md-4">
                <h5><%= link_to item.name, item_show_path(item) %></h5>
                ï¿¥<%= number_with_delimiter(item.price, precision: 0) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>